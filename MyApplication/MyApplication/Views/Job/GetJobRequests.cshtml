@model MyApplication.Models.Job
@{
    ViewBag.Title = "Job Candidates";
    var IsCreator = ViewBag.utilizatorAutor;
}

<h2> @ViewBag.Title </h2>

<div class="products" style="margin-bottom:5%">
    <div class="row">
        <div class="container">

            @if (ViewBag.requestCommissions.Count == 0)
            {
                <h3>Looks like no one has applied for this job yet. Give it a bit more time!</h3>
            }

            else
            {
                
                    for (var i = 0; i < ViewBag.requestCommissions.Count; i++)
                    {
                        <div class="col-md-4" style="display:flex;flex-direction:column;margin-top:5%;">
                            <a class="avatar" href="@Url.Action("OnPressUser", "Users", new { id = ViewBag.candidateNamesList[i].Id })" style="align-content:center;justify-content:center;margin-left:auto;margin-right:auto;">
                                <img src="@Url.Content(ViewBag.candidateNamesList[i].ImagePath)" width="230" height="230" alt="Profile Avatar" title="" style="border-radius:50%" />
                                <p style="font-size:medium; text-decoration:none; text-align:center; color:#21204D">@ViewBag.candidateNamesList[i].UserName</p>
                            </a>

                            <div class="center-block divcentrat">
                                @if (IsCreator == true)
                                {
                                    <button class="btn btn-default" onclick="location.href='@Url.Action("AcceptJob", "Job", new { id = @ViewBag.requestCommissions[i].Id })'"> Choose as winner</button>
                                }
                            </div>
                        </div>
                    }
                
            }
        </div>
    </div>
</div>

<style>
    .divcentrat {
        align-self: center;
        align-content:center;
        justify-content:center;
    }
</style>
