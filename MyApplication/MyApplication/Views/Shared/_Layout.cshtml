<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ARTchive</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/font-awesome-line-awesome/css/all.min.css">

    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")

</head>
<body>

    <div class="navbar navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                    <img class="menuImg" src="~/Assets/newMenu.png"  style="cursor:pointer;"/>
                </button>
                <a class="nav-item" href="@Url.Action("Index", null, new { area = string.Empty, controller = "Product" }, Request.Url.Scheme)">
                    <img src="~/Images/logo.png" width="35" height="35" style="cursor:pointer;">
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", null, new { area = string.Empty, controller = "Product" }, Request.Url.Scheme)"> Home <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)"> About </a>
                    </li>

                    @if (User.IsInRole("Administrator") || User.IsInRole("User"))
                    {
                        <li class="dropdown ">
                            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Jobs <span class="caret"></span> </a>
                            <ul class="dropdown-menu nav-links">
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("New", null, new { area = string.Empty, controller = "Job" }, Request.Url.Scheme)"> New Job </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", null, new { area = string.Empty, controller = "Job" }, Request.Url.Scheme)"> My Jobs </a>
                                </li>

                                
                            </ul>
                        </li>

                    }

                    @if (User.IsInRole("Administrator") || User.IsInRole("Editor"))
                    {
                        <li class="dropdown ">
                            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Contests <span class="caret"></span> </a>
                            <ul class="dropdown-menu nav-links">
                                <li>
                                    <a class="nav-link">@Html.ActionLink("Explore", "Sort", "Job") </a>
                                </li>


                                <li>
                                    <a class="nav-link">@Html.ActionLink("My Jobs", "Index", "JobList") </a>
                                </li>

                                
                            </ul>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", null, new { area = string.Empty, controller = "Category" }, Request.Url.Scheme)"> Categories </a>
                    </li>
                    @if (User.IsInRole("Administrator") || User.IsInRole("Editor"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("New", null, new { area = string.Empty, controller = "Product" }, Request.Url.Scheme)"> Submit </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", null, new { area = string.Empty, controller = "FavoriteList" }, Request.Url.Scheme)" data-toggle="modal">  Favorites  </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Sort", null, new { area = string.Empty, controller = "Product" }, Request.Url.Scheme)"> Discover </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", null, new { area = string.Empty, controller = "Users" }, Request.Url.Scheme)"> Users </a>
                    </li>

                   
                    @if (User.IsInRole("Administrator"))
                    {
                        <li class="dropdown ">
                            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Admin Settings <span class="caret"></span> </a>
                            <ul class="dropdown-menu nav-links">
                                <li>
                                    <a class="nav-link">@Html.ActionLink("Approve Posts", "Approve", "Product") </a>
                                </li>
                                <li>
                                    <a class="nav-link">@Html.ActionLink("Manage Users", "Index", "Users") </a>
                                </li>

                                <li>
                                    <a class="nav-link">@Html.ActionLink("New category", "New", "Category") </a>
                                </li>


                            </ul>
                        </li>
                    }


                </ul>


                            @if (Request.IsAuthenticated)
                            {
                                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <ul class="nav navbar-nav navbar-right">

                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> My profile <span class="caret"></span> </a>
                                            <ul class="dropdown-menu nav-links">
                                                <li>@Html.ActionLink("Manage account", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                                                <li role="separator" class="divider"></li>
                                                <li><a class="logOffText" href="javascript:document.getElementById('logoutForm').submit()"> Log off </a></li>
                                            </ul>
                                        </li>
                                    </ul>

                                }
                            }
                            else
                            {
                                <ul class="nav navbar-nav navbar-right">
                                    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                                </ul>
                            }
</div>

        </div>
      
</div>


    <div class="body-content">
        @RenderBody()
        <hr />

        <footer class="big-footer fullwidth dark-footer t-left">
            <div class="container text-center text-md-left">
                <div class="row clearfix boxed footer_inner pb-20" style="padding-bottom:20px">
                    <div class="col-xs-3 mx-auto">
                        <h3 class="footer_header light no-margin no-padding font-weight-bold">MY ARTCHIVE</h3>
                        <div class="mb-10" style="margin-bottom:10px"></div>

                        <img src="~/Images/logo.png" class="mb-2" alt="MY ARTCHIVE LOGO" width="100" height="100">
                        <p class="copyright">
                            &copy; MyARTchive 2020
                        </p>

                    </div>

                    <div class="col-xs-3 mx-auto">
                        <h3 class="footer_header light no-margin no-padding">Sections</h3>
                        <ul class="list-unstyled">
                            <li class="footer-link">
                                <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Product" }, Request.Url.Scheme)" class="text-muted">Homepage</a>
                            </li>
                            <li class="footer-link">
                                <a href="@Url.Action("About", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)" class="text-muted">About us</a>
                            </li>
                            <li class="footer-link">
                                <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Category" }, Request.Url.Scheme)" class="text-muted">Categories</a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-xs-3 mx-auto">
                        <h3 class="footer_header light no-margin no-padding">Gallery</h3>
                        <ul class="list-unstyled">
                            @if (User.IsInRole("Administrator") || User.IsInRole("Editor"))
                            {
                            <li class="footer-link">
                                <a href="@Url.Action("New", null, new { area = string.Empty, controller = "Product" }, Request.Url.Scheme)" class="text-muted"> Submit </a>
                            </li>
                            }
                            

                            <li class="footer-link">
                                <a href="@Url.Action("Sort", null, new { area = string.Empty, controller = "Product" }, Request.Url.Scheme)" class="text-muted"> Discover </a>
                            </li>
                            <li class="footer-link">
                                <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Users" }, Request.Url.Scheme)" class="text-muted">Users</a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-xs-3 mx-auto">
                        <h3 class="footer_header light no-margin no-padding">More</h3>
                        <ul class="list-unstyled">

                            <li class="footer-link">
                                <a href="@Url.Action("Sort", null, new { area = string.Empty, controller = "Job" }, Request.Url.Scheme)" class="text-muted">Contests</a>
                            </li>

                            @if (User.IsInRole("Administrator") || User.IsInRole("User"))
                            {
                                <li class="footer-link">
                                    <a href="@Url.Action("New", null, new { area = string.Empty, controller = "Job" }, Request.Url.Scheme)" class="text-muted">New job</a>
                                </li>
                            }
                           

                            <li class="footer-link">
                                <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "FavoriteList" }, Request.Url.Scheme)" data-toggle="modal" class="text-muted">Favorites</a>
                            </li>

                        </ul>
                    </div>

                    
                    </div>
                </div>

        </footer>
