@model MyApplication.Models.Category
@{
    ViewBag.Title = "Show category";
}


<div class="container">


    <h2>@Model.CategoryName</h2>

    

    <br />

    <div class="products">
        <div class="row">
            <div class="container">
                <div class="row">
                    @foreach (MyApplication.Models.Product product in ViewBag.Products)
                    {
                        <div class="col-md-4 col-sm-5">

                            @Html.Partial("ProductInfo", product)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


</div>