@model MyApplication.Models.Category
@{
    ViewBag.Title = "Lista categorii";
}

<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Discover our categories

            </h1>
            
        </div>
    </div>

    @foreach (MyApplication.Models.Category category in ViewBag.Categories)
    {
        <div class="row" style="padding-top:3%;">

            <div class="col-md-6" style="justify-content:center; display:flex; padding-bottom:5%;">

                    <img class="img-responsive " src="@Url.Content(category.ImagePath)" alt="">
            </div>
            <div class="col-md-6" style="text-align:justify; padding-left:5%;padding-right:5%;">
                <a href="/Category/Show/@category.CategoryId">
                    <div class="effectButton">
                        <div class="diamond">
                            <div></div>
                        </div>
                        <h1 class="text">@category.CategoryName</h1>
                    </div>
                </a>
                <p style="font-size:medium; padding-left:5%; padding-right:5%">@category.Description</p>


                @if (User.IsInRole("Administrator"))
                {
                    <div style="text-align:center; margin-top:5%;">
                        <a class="btn btn-default" href="/Category/Edit/@category.CategoryId">Edit Category</a>
                    </div>

                    using (Html.BeginForm(actionName: "Delete", controllerName: "Category", method: FormMethod.Post, routeValues: new { id = category.CategoryId }))
                    {
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <div style="text-align:center; margin-top:2%;">
                             <button class="btn btn-default" type="submit">Delete category</button>
                        </div>
                    }

                }

            </div>
        </div>
        <hr>
    }
</div>

<style>

    .effectButton {
        position: relative;
        background-color: #21204D;
        width: 100%;
        height: 100px;
        margin-bottom: 30px;
        padding-left:5px;
    }

        .effectButton .text {
            position: absolute;
            margin-top: 20px;
            margin-left: 40px;
            font-size: 3em;
            color: aliceblue;
           
        }

    .diamond {
        position: absolute;
        background-color: rgba(0,0,0,.2);
        width: 50%;
        height: 100px;
        right: 0;
        -moz-transition: width 1s;
        -o-transition: width 1s;
        -webkit-transition: width 1s;
        transition: width 1s;
    }

        .diamond:before {
            content: "";
            position: absolute;
            width: 0;
            height: 0;
            top: 0;
            left: -50px;
            border-right: 50px solid rgba(0,0,0,.2);
            border-bottom: 50px solid rgba(0,0,0,0);
        }

        .diamond div:before {
            content: "";
            position: absolute;
            width: 0;
            height: 0;
            bottom: 0;
            left: -50px;
            border-right: 50px solid rgba(0,0,0,.2);
            border-top: 50px solid rgba(0,0,0,0);
        }

    .effectButton:hover .diamond {
        width: 15%;
    }

</style>

<script src="js/jquery.js"></script>

<script src="js/bootstrap.min.js"></script>
